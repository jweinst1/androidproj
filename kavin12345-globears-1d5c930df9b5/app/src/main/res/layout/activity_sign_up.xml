<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.user.globears.SignUpActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/sign_up_toolbar" >
    </include>

    <Button
        android:id="@+id/connect_with_facebook"
        android:layout_below="@+id/tool_bar"
        android:text="Connect with Facebook"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/facebook_button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/name"
        android:hint="First             Last Name"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_below="@+id/connect_with_facebook"
        android:background="@drawable/rounded_edittext"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/email"
        android:hint="Email"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_below="@+id/name"
        android:background="@drawable/rounded_edittext"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/pass_word"
        android:hint="Password"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:password="true"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_below="@+id/email"
        android:background="@drawable/rounded_edittext"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/agreement"
        android:layout_below="@+id/pass_word"
        android:layout_marginTop="30dp"
        android:text="By creating an account, you agree to our terms of service."
        android:textSize="12dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/next"
        android:layout_below="@+id/agreement"
        android:text="Next"
        android:background="#758AB6"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp" />


</RelativeLayout>
